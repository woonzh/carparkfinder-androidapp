<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:clickable="true"
        android:duplicateParentState="true">

        <TextView
            android:id="@+id/cpAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/NavigateButton"
            android:fontFamily="serif"
            android:text="TESTING"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/availLots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/occupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/availLots"
            android:text="Text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/free_park"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/night_park"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/night_park"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:text="Text"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/NavigateButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@mipmap/ic_navigation" />

    </RelativeLayout>>
</RelativeLayout>